<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TabLayoutTextSizeStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">16sp</item>
        <!-- 在这设置 -->
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="UserInterfaceTitleTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <!-- 在这设置 -->
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="UserInputAreaTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@null</item>
    </style>
    <style name="UserVCodeTextStyle">
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">6dp</item>
        <item name="android:background">@drawable/user_button_selector</item>
    </style>
    <style name="UserButtonTextStyle">
        <item name="android:layout_marginStart">23dp</item>
        <item name="android:layout_marginEnd">23dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/user_button_selector</item>
<!--        <item name="android:background">48sp</item>-->
<!--        <item name="android:color">48sp</item>-->
    </style>
    <style name="RegisterRequiredTipStyle">
        <item name="android:textColor">#c64d6c</item>
    </style>
    <style name="RegisterInputItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#cbcbcb</item>
        <item name="android:background">@drawable/user_input_area_round_shape</item>
    </style>
    <style name="ToolbarTitleTextStyle">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>