    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="12dp" android:id="@+id/device_address" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="00:11:22:33:AA:BB" />
        <TextView android:textSize="12dp" android:id="@+id/rssi" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="123" android:layout_alignParentRight="true" />
