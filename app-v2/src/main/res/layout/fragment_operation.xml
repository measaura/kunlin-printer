<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".control.fragment.OperationFragment">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="10dp">

        <TextView
                android:id="@+id/deviceStatus"
                android:text="开机状态"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="30dp"
                android:background="@android:color/holo_green_light"
                android:textAlignment="center"
                android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">
        <Button
                android:id="@+id/on"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="10dp"
                android:text="@string/go_online"
                android:layout_gravity="center_horizontal"/>

        <Button
                android:id="@+id/off"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="10dp"
                android:text="@string/go_offline"
                android:layout_gravity="center_horizontal"/>

        <Button
                android:id="@+id/test"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="10dp"
                android:text="@string/test_print"
                android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false" android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">
            <TextView
                    android:text="@string/current_print_count"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24sp"/>
            <TextView
                    android:id="@+id/currentPrintCount"
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24sp"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">
            <TextView
                    android:text="@string/print_count"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24sp"/>
            <TextView
                    android:id="@+id/printCount"
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24sp"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">
            <TextView
                    android:text="@string/pack_per_minus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24sp"/>
            <TextView
                    android:id="@+id/packPerMinus"
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24sp"/>
        </LinearLayout>
    </LinearLayout>
