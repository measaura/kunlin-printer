<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:gravity="center_vertical|right"
                                                   android:orientation="horizontal" android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">
    <TextView android:id="@+id/tvBooleanLabel" android:textSize="14sp" android:textColor="@color/edit_func_attr_label_text_color"
              android:paddingTop="15dp" android:paddingBottom="15dp" android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:text="" android:paddingStart="15dp"
              app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"/>
    <Switch android:id="@+id/sbBooleanValue" android:layout_marginEnd="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>

