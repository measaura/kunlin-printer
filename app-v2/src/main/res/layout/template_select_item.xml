<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:tag="layout/type_select_item_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:id="@+id/llTemplate"
            android:orientation="vertical"
            android:background="@drawable/base_selector_white_corners_pressed" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_margin="3dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        <ImageView android:id="@+id/template_iv_thumb" android:background="@drawable/template_shape_image"
                   android:padding="2dp" android:layout_width="match_parent" android:layout_height="wrap_content"
                   android:layout_margin="10dp" android:scaleType="fitXY" android:adjustViewBounds="true"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:layout_marginLeft="11dp"
                      android:layout_marginBottom="8dp" android:layout_marginStart="11dp">
            <TextView android:id="@+id/template_tv_name" android:textSize="15sp" android:textColor="@color/black"
                      android:ellipsize="end"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:maxLines="1" android:singleLine="true"/>
            <TextView android:visibility="gone" android:textSize="12sp" android:textColor="@color/gray"
                      android:id="@+id/template_tv_label_size"
                      android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginTop="10dp"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:id="@+id/ivDelete" android:padding="6dp"
               android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:background="@drawable/rectangle_selector"
               android:src="@drawable/edit_func_ope_delete_selector"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
